{
    "manifest_version": 2,
    "name": "recipe extractor",
    "version": "0.1",

    "content_scripts": [
        {
            "matches": [
                "<all_urls>"
            ],
            "js": [
                "content.js"
            ]
        }
    ],

    "background": {
        "scripts": [
            "background.js"
        ]
    },

    "permissions": ["tabs"],

    "browser_action": {
        "default_popup": "popup.html",
        "default_title": "This is my popup"
    }
}